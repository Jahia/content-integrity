<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.jahia.modules.verifyintegrity.actions.VerifyIntegrityOfSiteContent">
        <property name="name" value="verifyIntegrityOfSiteContent"/>
        <property name="verifyIntegrityService" ref="verifyIntegrityService"/>
        <property name="jahiaUserManagerService" ref="JahiaUserManagerService"/>
        <property name="requiredPermission" value="allowToVerifySiteIntegrity"/>
    </bean>

    <bean id="verifyIntegrityService" class="org.jahia.modules.verifyintegrity.services.VerifyIntegrityService">
        <property name="contentDefinition" ref="ContentDefinitionHelper"/>
    </bean>

</beans>